<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h4 class="text-dark mb-0"><%= t ".get_in_touch" %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-md-7 mt-4 pt-2">
        <div class="custom-form rounded border p-4">
          <div id="message"></div>
          <form>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group app-label">
                  <label class="text-muted"><%= t ".name" %></label>
                  <input name="name" id="name2" type="text" class="form-control resume" placeholder="Enter Name..">
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group app-label">
                  <label class="text-muted"><%= t ".email_address" %></label>
                  <input name="email" id="email1" type="email" class="form-control resume" placeholder="Enter Email..">
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group app-label">
                  <label class="text-muted"><%= t ".subject" %></label>
                  <input type="text" class="form-control resume" id="subject" placeholder="Subject..">
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group app-label">
                  <label class="text-muted"><%= t ".message" %></label>
                  <textarea name="comments" id="comments" rows="5" class="form-control resume" placeholder="Message.."></textarea>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <input type="submit" id="submit" name="send" class="submitBnt btn btn-primary" value="<%= t ".submit" %>">
                <div id="simple-msg"></div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-lg-4 col-md-5 mt-4 pt-2">
        <div class="border rounded text-center p-4">
          <h5 class="text-dark pb-3"><%= t ".contact_info" %></h5>
          <div class="contact-location rounded mt-5 p-4">
            <div class="contact-location-icon bg-white text-primary rounded-pill">
              <i class="fa fa-map-marker"></i>
            </div>
            <p class="text-muted pt-4 f-20 mb-0"><%= t ".address" %></p>
          </div>
          <h6 class="text-muted mt-4 mb-0"><%= t ".share" %></h6>
          <ul class="list-unstyled social-icon mt-3 mb-0">
            <li class="list-inline-item">
              <%= link_to Settings.empty_path do %>
                <i class="fab fa-facebook"></i>
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to Settings.empty_path do %>
                <i class="fab fa-twitter"></i>
              <% end %>
            </li>
            <li class="list-inline-item">
              <%= link_to Settings.empty_path do %>
                <i class="fab fa-instagram"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
