<% provide :title, t(".title") %>
<section class="vh-100">
  <div class="home-center">
    <div class="home-desc-center">
      <div class="container">
        <div class="row justify-content-center mt-4 mb-4">
          <div class="col-md-6">
            <div class="login_page bg-white shadow rounded p-4">
              <div class="text-center">
                <h4 class="mb-4"><%= t ".change_your_password" %></h4>
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <div class="row mb-2">
                  <div class="col-md-12">
                    <%= render "users/shared/error_messages", resource: resource %>
                  </div>
                  <%= f.hidden_field :reset_password_token %>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :password do %>
                        <%= t ".password" %><span class="text-danger"> *</span><br />
                        <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                        <% end %>
                      <% end %>
                      <%= f.password_field :password, class: "form-control", required: true %>
                      <div class="invalid-feedback">
                        <%= f.object.errors.full_messages_for(:password).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :password_confirmation do %>
                        <%= t ".password_confirmation" %><span class="text-danger"> *</span>
                      <% end %>
                      <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
                      <div class="invalid-feedback">
                        <%= f.object.errors.full_messages_for(:password_confirmation).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <%= f.submit t(".confirmation"), class: "btn btn-primary w-100"%>
                  </div>
                </div>
              <% end %>
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
