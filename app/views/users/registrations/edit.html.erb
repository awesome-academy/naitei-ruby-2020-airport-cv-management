<% provide :title, t(".title") %>
<section class="vh-100">
  <div class="home-center">
    <div class="home-desc-center">
      <div class="container">
        <div class="row justify-content-center mt-4 mb-4">
          <div class="col-md-6">
            <div class="login_page bg-white shadow rounded p-4">
              <div class="text-center">
                <h4><%= t ".edit" %> <%= resource_name.to_s.humanize %></h4>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <div class="row mb-2">
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :email do %>
                        <%= t ".email" %><span class="text-danger"> *</span>
                      <% end %>
                      <%= f.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
                      <div class="invalid-feedback" style="display: block;">
                        <%= f.object.errors.full_messages_for(:email).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div><%= t ".current" %> <%= resource.unconfirmed_email %></div>
                  <% end %>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :password do %>
                        <%= t ".password" %><span class="text-danger"> *</span>
                        <i><%= t ".leave_blank" %></i><br />
                      <% end %>
                      <%= f.password_field :password, class: "form-control", required: true, autocomplete: "password" %>
                      <div class="invalid-feedback" style="display: block;">
                        <%= f.object.errors.full_messages_for(:password).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :password_confirmation do %>
                        <%= t ".password_confirmation" %><span class="text-danger"> *</span>
                      <% end %>
                      <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
                      <div class="invalid-feedback" style="display: block;">
                        <%= f.object.errors.full_messages_for(:password_confirmation).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="form-group position-relative">
                      <%= f.label :current_password do %>
                        <%= t ".current_password" %><span class="text-danger"> *</span>
                      <% end %>
                      <%= f.password_field :current_password, class: "form-control", required: true, autocomplete: "current-password" %>
                      <div class="invalid-feedback" style="display: block;">
                        <%= f.object.errors.full_messages_for(:current_password).join("\n") %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <%= f.submit t(".update"), class: "btn btn-primary w-100"%>
                  </div>
                </div>
              <% end %>
              <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100 mb-2" %>
              <%= link_to t(".back"), :back %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
