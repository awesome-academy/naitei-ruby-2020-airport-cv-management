<% provide :title, t(".title") %>
<%= render "shared/start" %>
<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="section-title text-center mb-4 pb-2">
          <h4 class="title title-line pb-5"><%= t ".all_categories" %></h4>
        </div>
      </div>
    </div>
    <div id="categories" class="row">
      <%= render @categories %>
    </div>
    <div id="paginator" class="col-lg-12 mt-4 pt-2">
      <%= paginate @categories, remote: true %>
    </div>
  </div>
</section>
