<button type="button" class="btn btn-warning rounded-pill mb-3 mr-2 profile-edit-button" data-toggle="modal" data-target="#profileFormModal">
  <%= t ".edit_general_information" %>
</button>
<div class="modal fade" id="profileFormModal" tabindex="-1" role="dialog" aria-labelledby="profileFormModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="profileFormModalTitle"><%= t ".general_information" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="profileForm">
        <%= render "profile_form", profile: profile %>
      </div>
    </div>
  </div>
</div>
