<% provide :title, "#{@profile.full_name} | #{t(".title")}"%>
<%= render "start_profile", profile: @profile %>
<% if @profile %>
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-5 mt-4 mt-sm-0 pt-2 pt-sm-0 order-md-2">
          <%= render @profile %>
        </div>
        <div class="col-lg-8 col-md-7 mt-sm-0 order-md-1">
          <div class="row">
            <div class="col-md-12 mt-md-0">
              <blockquote class="blockquote p-3">
                <p class="text-muted mb-0 font-italic"><%= @user.introduction %></p>
              </blockquote>
            </div>
          </div>
          <% if @profile.educations.present? %>
            <div class="row">
              <div class="col-lg-12 mt-4 pt-2">
                <h4 class="text-dark"><%= t ".educations" %></h4>
              </div>
            </div>
            <div class="row">
              <%= render @profile.educations %>
            </div>
          <% end %>
          <% if @profile.experiences.present? %>
            <div class="row">
              <div class="col-lg-12 mt-4 pt-2">
                <h4 class="text-dark"><%= t ".experiences" %></h4>
              </div>
            </div>
            <div class="row">
              <%= render @profile.experiences %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
