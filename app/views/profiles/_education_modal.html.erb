<button type="button" class="btn btn-warning rounded-pill mr-2 btn-sm float-right" data-toggle="modal" data-target="#educationModal">
  <%= t ".add" %>
</button>
<div class="modal fade" id="educationModal" tabindex="-1" role="dialog" aria-labelledby="educationModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="educationModalTitle"><%= t ".education" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="educationForm">
        <%= render "education_form", education: education %>
      </div>
    </div>
  </div>
</div>
