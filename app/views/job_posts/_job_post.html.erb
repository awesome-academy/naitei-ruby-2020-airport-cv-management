<div class="job-list-box border rounded mt-4 mb-2">
  <div class="p-3">
    <div class="row align-items-center">
      <div class="col-lg-2">
        <div class="company-logo-img">
          <img src="<%= Settings.url.placeholder.job %>" alt="" class="img-fluid mx-auto d-block">
        </div>
      </div>
      <div class="col-lg-10 col-md-9">
        <div class="job-list-desc">
          <h6 class="mb-2">
            <%= link_to job_post.title, job_post_path(job_post), class: "text-dark" %>
          </h6>
          <p class="text-muted mb-0"><i class="fas fa-university mr-2"></i></i><%= job_post.category_title %></p>
          <ul class="list-inline mb-0">
            <li class="list-inline-item mr-3">
              <p class="text-muted mb-0"><i class="fas fa-map-marker-alt mr-2"></i></i><%= job_post.location %></p>
            </li>
            <li class="list-inline-item">
              <p class="text-muted mb-0"><i class="fas fa-clock mr-2"></i><%= time_ago_in_words job_post.created_at %> <%= t ".ago" %></p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
